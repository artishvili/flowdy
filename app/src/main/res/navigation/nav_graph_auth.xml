<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_auth"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.devshish.internship.presentation.ui.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_webFragment"
            app:destination="@id/webFragment" />
    </fragment>
    <fragment
        android:id="@+id/webFragment"
        android:name="com.devshish.internship.presentation.ui.web.WebFragment"
        android:label="WebFragment" >
        <action
            android:id="@+id/action_webFragment_to_nav_graph_home"
            app:destination="@id/nav_graph_home"
            app:popUpTo="@id/nav_graph_auth" />
        <argument
            android:name="link"
            app:argType="string" />
    </fragment>
    <include app:graph="@navigation/nav_graph_home" />
</navigation>